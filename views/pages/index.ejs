<!-- Dashboard Overview -->
<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <h2 class="mb-0 fs-2 fs-sm-1">
        <i class="bi bi-speedometer2 me-2"></i>
        <span class="d-none d-sm-inline">Dashboard</span>
        <span class="d-sm-none">Home</span>
    </h2>
    <div class="d-flex align-items-center">
        <span class="text-muted small">
            <i class="bi bi-clock"></i> 
            <span class="d-none d-sm-inline">Last updated:</span> 
            <%= moment().format('HH:mm:ss') %>
        </span>
        <button class="btn btn-sm btn-outline-primary ms-2" onclick="refreshDashboard()">
            <i class="bi bi-arrow-repeat"></i>
        </button>
    </div>
</div>

<!-- Welcome Message -->
<div class="alert alert-primary alert-dismissible fade show d-flex align-items-center py-2 py-sm-3 mb-4" role="alert">
    <i class="bi bi-hand-thumbs-up fs-4 me-2 me-sm-3"></i>
    <div class="flex-grow-1">
        <strong>Welcome back, <%= user.name || user.username %>!</strong>
        <span class="d-none d-sm-inline"> Your device is online and functioning normally.</span>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>

<!-- Status Cards Row - FIXED: Using Bootstrap grid properly -->
<div class="row g-3 mb-4">
    <!-- Signal Card -->
    <div class="col-12 col-sm-6 col-md-3">
        <div class="card border-primary h-100 hover-effect">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1 small text-uppercase fw-semibold">Signal Strength</h6>
                        <h3 class="mb-0 display-6"><%= deviceStatus.signal %>%</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-wifi fs-2 text-primary"></i>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 6px;">
                    <div class="progress-bar bg-primary" style="width: <%= deviceStatus.signal %>%"></div>
                </div>
                <small class="text-muted mt-2 d-block">
                    <i class="bi bi-activity me-1"></i>RSSI: -67 dBm
                </small>
            </div>
        </div>
    </div>

    <!-- Battery Card -->
    <div class="col-12 col-sm-6 col-md-3">
        <div class="card border-success h-100 hover-effect">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1 small text-uppercase fw-semibold">Battery</h6>
                        <h3 class="mb-0 display-6"><%= deviceStatus.battery %>%</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-battery-full fs-2 text-success"></i>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 6px;">
                    <div class="progress-bar bg-success" style="width: <%= deviceStatus.battery %>%"></div>
                </div>
                <small class="text-muted mt-2 d-block">
                    <i class="bi bi-lightning me-1"></i>Charging: USB
                </small>
            </div>
        </div>
    </div>

    <!-- Network Card -->
    <div class="col-12 col-sm-6 col-md-3">
        <div class="card border-info h-100 hover-effect">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1 small text-uppercase fw-semibold">Network</h6>
                        <h3 class="mb-0 display-6"><%= deviceStatus.network %></h3>
                    </div>
                    <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-broadcast fs-2 text-info"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="d-flex justify-content-between">
                        <small class="text-muted">Operator</small>
                        <small class="fw-bold">Robi</small>
                    </div>
                    <div class="d-flex justify-content-between">
                        <small class="text-muted">Technology</small>
                        <small class="fw-bold">LTE Cat-1</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Storage Card -->
    <div class="col-12 col-sm-6 col-md-3">
        <div class="card border-warning h-100 hover-effect">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1 small text-uppercase fw-semibold">Storage</h6>
                        <h3 class="mb-0 display-6"><%= deviceStatus.storage %>%</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-hdd-stack fs-2 text-warning"></i>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 6px;">
                    <div class="progress-bar bg-warning" style="width: <%= deviceStatus.storage %>%"></div>
                </div>
                <small class="text-muted mt-2 d-block">
                    <i class="bi bi-sd-card me-1"></i>SD Card: 14.2GB/32GB
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Device Details Card -->
<div class="card mb-4">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fs-6 fw-semibold">
            <i class="bi bi-info-circle me-2"></i>Device Details
        </h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-6 col-md-3">
                <div class="d-flex flex-column">
                    <small class="text-muted text-uppercase small">Temperature</small>
                    <strong class="fs-5"><%= deviceStatus.temperature %>Â°C</strong>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="d-flex flex-column">
                    <small class="text-muted text-uppercase small">Uptime</small>
                    <strong class="fs-5"><%= deviceStatus.uptime %></strong>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="d-flex flex-column">
                    <small class="text-muted text-uppercase small">IP Address</small>
                    <strong class="fs-5">10.120.45.67</strong>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="d-flex flex-column">
                    <small class="text-muted text-uppercase small">IMEI</small>
                    <strong class="fs-5 text-truncate">12345...2345</strong>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="card mb-4">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fs-6 fw-semibold">
            <i class="bi bi-lightning-charge me-2"></i>Quick Actions
        </h5>
    </div>
    <div class="card-body">
        <div class="d-flex flex-wrap gap-2">
            <button type="button" class="btn btn-outline-primary flex-fill" data-bs-toggle="modal" data-bs-target="#sendSmsModal">
                <i class="bi bi-chat-dots me-2"></i>
                <span class="d-none d-sm-inline">Send</span> SMS
            </button>
            <button type="button" class="btn btn-outline-success flex-fill">
                <i class="bi bi-cash-stack me-2"></i>
                <span class="d-none d-sm-inline">Check</span> Balance
            </button>
            <button type="button" class="btn btn-outline-warning flex-fill">
                <i class="bi bi-arrow-repeat me-2"></i>
                <span class="d-none d-sm-inline">Restart</span> Modem
            </button>
        </div>
    </div>
</div>

<!-- Recent SMS Section -->
<div class="row g-3">
    <!-- Recent SMS List -->
    <div class="col-12 col-lg-8">
        <div class="card h-100">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fs-6 fw-semibold">
                    <i class="bi bi-chat-dots me-2"></i>Recent SMS
                </h5>
                <a href="/sms" class="btn btn-sm btn-primary">
                    <span class="d-none d-sm-inline">View All</span>
                    <i class="bi bi-arrow-right d-sm-none"></i>
                </a>
            </div>
            <div class="card-body p-0">
                <% if (recentSms && recentSms.length > 0) { %>
                    <div class="list-group list-group-flush">
                        <% recentSms.forEach(sms => { %>
                            <div class="list-group-item list-group-item-action p-3">
                                <div class="d-flex gap-3">
                                    <div class="flex-shrink-0">
                                        <div class="bg-light rounded-circle p-2">
                                            <i class="bi bi-envelope fs-5"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start gap-2">
                                            <h6 class="mb-0">
                                                <%= sms.from_number %>
                                                <% if (!sms.read) { %>
                                                    <span class="badge bg-danger ms-2">New</span>
                                                <% } %>
                                            </h6>
                                            <small class="text-muted"><%= moment(sms.timestamp).fromNow() %></small>
                                        </div>
                                        <p class="mb-0 mt-1 text-truncate"><%= sms.message %></p>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                        <p class="text-muted mt-3 mb-0">No recent messages</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- System Activity -->
    <div class="col-12 col-lg-4">
        <div class="card h-100">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fs-6 fw-semibold">
                    <i class="bi bi-activity me-2"></i>System Activity
                </h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center px-0 border-0">
                        <div>
                            <i class="bi bi-arrow-up-circle text-success me-2"></i>
                            Data Sent
                        </div>
                        <span class="badge bg-light text-dark">156 MB</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center px-0 border-0">
                        <div>
                            <i class="bi bi-arrow-down-circle text-primary me-2"></i>
                            Data Received
                        </div>
                        <span class="badge bg-light text-dark">1.2 GB</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center px-0 border-0">
                        <div>
                            <i class="bi bi-envelope text-warning me-2"></i>
                            SMS Sent
                        </div>
                        <span class="badge bg-light text-dark">23</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center px-0 border-0">
                        <div>
                            <i class="bi bi-telephone text-info me-2"></i>
                            Call Duration
                        </div>
                        <span class="badge bg-light text-dark">45 min</span>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white py-2">
                <small class="text-muted">
                    <i class="bi bi-clock me-1"></i>Updated 2 min ago
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Send SMS Modal -->
<div class="modal fade" id="sendSmsModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-chat-dots me-2"></i>Send SMS
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="quickSmsForm">
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text">+88</span>
                            <input type="tel" class="form-control" name="to" 
                                   placeholder="1712345678" 
                                   pattern="[0-9]{10}" 
                                   title="Please enter a 10-digit number"
                                   required>
                        </div>
                        <small class="text-muted">Enter 10-digit number without country code</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" name="message" rows="4" 
                                  maxlength="160" 
                                  placeholder="Type your message..."
                                  required></textarea>
                        <div class="d-flex justify-content-between mt-1">
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                160 characters max
                            </small>
                            <small class="text-muted">
                                <span id="charCount">0</span>/160
                            </small>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="quickSendSms">
                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                    Send SMS
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function refreshDashboard() {
    location.reload();
}

// Character counter
document.addEventListener('DOMContentLoaded', function() {
    const textarea = document.querySelector('#quickSmsForm textarea');
    const charCount = document.getElementById('charCount');
    
    if (textarea && charCount) {
        textarea.addEventListener('input', function() {
            charCount.textContent = this.value.length;
        });
    }
});
</script>